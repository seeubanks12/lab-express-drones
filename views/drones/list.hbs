<h2>Available drones</h2>
{{#each drones}}
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Drone Name: {{this.name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Number of propellers: {{this.propellers}}</h6>
        <h6 class="card-subtitle mb-2 text-muted">Drone Maximum Speed: {{this.maxSpeed}}</h6>
    <div class="card-btn-section">
        <a href="/drones/{{this.id}}/edit">Edit</a> <br>
        <form action ="/drones/{{this.id}}/delete" method ="POST">
        <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
        </div>
{{/each}}